<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendCircleActivity">
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/background"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="背景图片"
        />
    <TextView
        android:id="@+id/friend_circle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@id/background_image"
        app:layout_constraintRight_toLeftOf="@id/friend_circle_image"
        />
    <ImageView
        android:id="@+id/friend_circle_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon"
        app:layout_constraintBottom_toBottomOf="@id/background_image"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/background_image"
        >
        <ListView
            android:id="@+id/friend_circle_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>