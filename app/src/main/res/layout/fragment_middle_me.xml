<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MiddleMeFragment">

    <!--一行-->
    <ImageView
        android:id="@+id/headimage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/showname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wechat"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/headimage"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信号："
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/headimage"
        app:layout_constraintBottom_toBottomOf="@id/headimage"
        />
    <TextView
        android:id="@+id/rightTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/righttag"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/headimage"
        />
    <!--一行-->
    <ListView
        android:id="@+id/listview_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/headimage"
        />
    <!--标识-->
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fragment_middle_me"
        app:layout_constraintBottom_toBottomOf="parent"
        />-->

</androidx.constraintlayout.widget.ConstraintLayout>