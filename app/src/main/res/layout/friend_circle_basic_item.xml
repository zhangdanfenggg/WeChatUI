<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/basic_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/basic_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/purple_500"
        android:paddingTop="5dp"
        app:layout_constraintTop_toTopOf="@id/basic_item_image"
        app:layout_constraintLeft_toRightOf="@id/basic_item_image"
        />
    <TextView
        android:id="@+id/basic_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/basic_item_name"
        app:layout_constraintTop_toBottomOf="@id/basic_item_name"
        />
    <TextView
        android:id="@+id/basic_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="@id/basic_item_name"
        app:layout_constraintTop_toBottomOf="@id/basic_item_text"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/basic_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="5dp"
        android:textColor="@color/purple_500"
        app:layout_constraintLeft_toRightOf="@id/basic_item_time"
        app:layout_constraintTop_toBottomOf="@id/basic_item_text"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>